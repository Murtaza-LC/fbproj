{
  "hosting": {
    "public": "public",
    "ignore": ["**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/api{,/**}", "function": { "functionId": "api", "region": "asia-south1" } },
      { "source": "!/@(api/**)", "destination": "/index.html" }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|png|jpg|jpeg|webp|svg|gif)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      }
    ]
  }
}